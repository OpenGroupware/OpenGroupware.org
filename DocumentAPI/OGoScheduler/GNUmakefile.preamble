libOGoScheduler_INCLUDE_DIRS += \
	-I..	\
	-I../../Logic/LSFoundation	\
	-I../../Logic/LSScheduler

libOGoScheduler_LIBRARIES_DEPEND_UPON += \
	-lOGoSchedulerTools		\
	-lOGoDocuments			\
	-lLSFoundation -lGDLAccess	\
	-lNGLdap -lNGMime		\
	-lNGStreams -lNGExtensions -lEOControl \
	-lDOM -lSaxObjC

