ADDITIONAL_LIB_DIRS += 					\
	-L../OGoDocuments/$(GNUSTEP_OBJ_DIR)		\
	-L../../Logic/LSScheduler/$(GNUSTEP_OBJ_DIR)	\
	-L../../Logic/LSFoundation/$(GNUSTEP_OBJ_DIR)

