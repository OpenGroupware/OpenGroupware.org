      },
      {
        verb      = "docview-inline";
        type      = "image/jpeg";
        component = SkyDocImageInlineViewer;
      },
      {
        verb      = "docview-inline";
        type      = "image/tiff";
        component = SkyDocEmbedInlineViewer;
      },
