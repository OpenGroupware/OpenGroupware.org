}

// clipboard

MainButtonRow: WOGenericContainer {
  elementName = "tr";
  BGCOLOR     = config.colors_mainButtonRow;
}

MainTitle: WOString { value = appointment.title; }

Notes: SkyNoteList {
  title       = appointment.title;
