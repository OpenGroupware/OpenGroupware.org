<!-- each tag can have ONE documentation child tag -->

<interface name="nmtoken"  targetNamespace="uri"
           xmlns="http://www.skyrix.com/skyrix-idl">

  <import location="uri" />*
  <fault reason="nmtoken" code="nmtoken" />*

  <!-- method names MUST be present and unique -->
  <method name="nmtoken">*
    <signature>*
      <!-- input/output names MUST be present and unique -->
      <input  name="nmtoken" type="qname" />*
      <output name="nmtoken" type="qname" />*
      <throw code="nmtoken" />*
      <!-- call by reference parameters are modeled by using the same part
           name in the *arguments* and the *result* section -->
    </signature>
    <example language="nmtoken">*
      <!-- example content (CDATA) -->
    </example>
  </method>

  <documentation language="nmtoken">*
    <!-- documentation content (CDATA) -->
  </documentation>

</interface>
